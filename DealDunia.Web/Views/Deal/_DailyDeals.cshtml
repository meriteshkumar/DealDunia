@model IEnumerable<DealDunia.Domain.Entities.DailyDeals>


@if (Model.Count() > 0)
{   
@*<h4>DAILY OFFERS</h4>*@
    <div class="row">
        @foreach (var deal in Model)
        {                
            <div class="col-lg-2 col-md-2 col-sm-2 col-sx-2  paddingzero">
                <div class="divDeal">
                    <div class="divDealImg">
                        <a target="_blank" href="@Url.Action("Out", "Out", new { source = "daily-deals", id = @deal.DailyDealId })">
                            <img itemprop="image" class="store_logo" alt="@deal.Title" src="@Url.Content("~/Images/" + deal.Image)" /></a>
                    </div>                    
                    <div class="divDealTitle">
                        <a class="dealTitle" target="_blank" href="@Url.Action("Out", "Out", new { source = "daily-deals", id = @deal.DailyDealId })">@deal.Title</a>
                    </div>
                    <div class="divDealCodeOuter">
                        <span><a class="divDealCodeInner" target="_blank" href="@Url.Action("Out", "Out", new { source = "daily-deals", id = @deal.DailyDealId })">VISIT OFFER</a></span>
                        <br />
                    </div>
                </div>
            </div>
        }
    </div>           
}
