@model IEnumerable<DealDunia.Domain.Entities.Coupon>


@if (Model.Count() > 0)
{
@*<h4>COUPONS & DEALS</h4>*@    
    <div class="row">
        @foreach (var coupon in Model)
        {    
            <div class="col-md-4 paddingzero">
                <a target="_blank" href="@Url.Action("Out", "Out", new { source = "coupons", id = coupon.CouponId })">
                    <div class="divDeal">
                        @*<a target="_blank" href="@Url.Action("Out", "Out", new { source = "couponsbycat", id = coupon.StoreCatMapId })">*@
                        <div class="divDealImg">
                            <img class="Img10050" alt="@coupon.OfferName" src="@Url.Content("~/Images/" + coupon.StoreImage)"/>
                        </div>
                        <div class="divDealTitle">
                            <span class="dealTitle">@coupon.CouponTitle.Replace("&amp;", "&")</span>
                        </div>
                        @{

            var divDealCouponOuter = (coupon.OfferType == "Coupon" ? "divCouponOuter" : "divDealCodeOuter");

                        }
                        <div class="@divDealCouponOuter">
                            <span><a class="divDealCodeInner" target="_blank" href="@Url.Action("Out", "Out", new { source = "coupons", id = coupon.CouponId })">@if (@coupon.OfferType == "Coupon")
                                                                                                                                                                 { @coupon.CouponCode;
                                                                                                                                                                 }
                                                                                                                                                                 else
                                                                                                                                                                 { <span>GRAB DEAL</span>} </a></span>
                        </div>

                        <div class="divDealExpiry">
                            @if (@coupon.OfferType == "Coupon")
                            {
                                <span>Coupon valid till @coupon.CouponExpiry</span>
                            }
                            else
                            {
                                <span>Deal valid till @coupon.CouponExpiry</span>
                            }
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
