@model DealDunia.Domain.Entities.Store

@{
    ViewBag.Title = "Store";
}

<h2>@Model.StoreName</h2>

<div>
    <h3>Daily Deals</h3>
    <hr />
    @Html.Action("DailyDeals", "Nav", new DealDunia.Domain.Entities.DailyDealsValues { StoreId = 0, StoreName = Model.StoreName })
    <h3>Offers</h3>
    <hr />
    @Html.Action("OfferURL", "Nav", new {SourceStoreId = Model.SourceStoreId})
    <h3>Exclusive Deals</h3>
    <hr />
    @Html.Action("ExclusiveDeals", "Nav", new DealDunia.Domain.Entities.ExecutiveDealValues { CategoryId = 0, CategoryName = string.Empty, StoreCategoryId = 0, StoreCategoryName = string.Empty, StoreName = Model.StoreName, StoreId = 0 });
    <h3>Coupons & Promotions</h3>
    @Html.Action("CouponView", "Nav", new DealDunia.Domain.Entities.CouponValues { OfferType = string.Empty, OfferName = Model.StoreName, StoreCategoryName = string.Empty })
</div>
