@model IEnumerable<DealDunia.Domain.Entities.OfferURL>

@if (Model.Count() > 0)
{
    <div class="row box">        
        <h4><span itemprop="name" class="boxtitle">OFFERS / LINKS</span></h4>
        @foreach (var offerURL in Model)
        {   
            <div class="col-md-3 paddingzero">
                <div class="divDeal">
                    <div class="divDealTitle">
                        <a class ="dealTitle" target="_blank" href="@offerURL.offer_url">@offerURL.name</a>
                    </div>
                    <div class="divDealCodeOuter">
                        <span><a class="divDealCodeInner" target="_blank" href="@offerURL.offer_url">VISIT OFFER</a></span>
                        <br />
                    </div>
                </div>
            </div>
        }
    </div>
}

