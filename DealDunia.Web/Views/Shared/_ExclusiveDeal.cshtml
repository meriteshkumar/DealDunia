@model IEnumerable<DealDunia.Domain.Entities.ExecutiveDeals>

@{
    ViewBag.Title = "Exclusive Deals";
}
<div class="row">
    <hr />
    <h4 style="text-align: center; color: #337ab7; font-weight: bold;">EXCLUSIVE DEALS</h4>
    <hr />
    @foreach (var deal in Model)
    {
    
        <div class="panel panel-info" style="float: left; width: 240px; height: auto; font-family: Verdana; margin: 5px; padding: 5px; text-align: center; vertical-align: middle">
            <div>
                <b><a target="_blank" href="@Url.Action("Out", "Out", new { source = "exclusive-deals", id = deal.ExcDealId })">
                    <img alt="@deal.StoreName" src="@Url.Content("~/Images/" + deal.StoreImage)" /></a></b>
            </div>
            <div style="font-size: 12px; margin-bottom: 5px; max-width: 220px; overflow: hidden; max-height: 20px; padding: 2px;">
                <b><a target="_blank" href="@Url.Action("Out", "Out", new { source = "exclusive-deals", id = deal.ExcDealId })">@deal.Title.Replace("&amp;", "&")</a></b>
            </div>
            <div style="padding: 10px;">
                <div style="margin: auto; height: 30px; width: 140px; background-color: #bf192a; font-weight: bold; color: gray; font-size: 11px; padding: 5px; border: 1px #fff dashed;">
                    <span><a style="color:white;" target="_blank" href="@Url.Action("Out", "Out", new { source = "exclusive-deals", id = @deal.ExcDealId })">VISIT OFFER</a></span>
                    <br />
                </div>
            </div>
        </div>    
    }
