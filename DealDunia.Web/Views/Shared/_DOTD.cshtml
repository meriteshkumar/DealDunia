@model IEnumerable<DealDunia.Domain.Entities.DOTD>

@if (Model.Count() > 0)
{
    <div class="row">
        @foreach (var deal in Model)
        {
            <a target="_blank" href="@deal.DetailPageURL">
                <div class="panel panel-info" style="float: left; width: 240px; height: 270px; font-family: Verdana; margin: 5px; padding: 5px; text-align: center; vertical-align: middle">
                    <div style="padding:5px;">
                        <img style="float:right; display:block; width:70px; height:30px;" alt="@deal.StoreName"  src="@Url.Content("~/Images/" + deal.StoreImage)"/>
                    </div>
                    <div style="height:200px; width:200px">
                        <img style="margin:auto; display:block; max-width:180px; max-height:180px;" alt="@deal.Title" src="@Url.Content(deal.ImageUrl)" />
                    </div>
                    <div style="font-size: 12px; margin-bottom: 5px; max-width: 220px; overflow: hidden; max-height: 20px; padding: 2px;">
                        <b>@deal.Title</b>
                    </div>
                    <div style="font-size: 12px; margin-bottom: 5px; max-width: 220px; overflow: hidden; max-height: 20px; padding: 2px;">
                        <b>
                            <a target="_blank" href="@deal.DetailPageURL">
                                @deal.Description <span style="color: gray; text-decoration-line: line-through">@deal.MRP</span> @deal.EffPrice
                            </a>
                        </b>
                    </div>
                </div>
            </a>
        }
    </div>
}