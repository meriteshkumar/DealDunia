@{    
    ViewBag.Title = "GrabMeDeal: Deals & Coupon Offers";
}
<div class="row box">
    @{Html.RenderPartial("_Carousel");}
</div>
<div class="row box">
    <h4><span class="boxtitle">FEATURED STORES</span></h4>
    @Html.Action("_ShopByStore", "Store")
</div>
<div class="row">
    <div class="col-lg-9 col-md-9 col-sm-9 col-sx-9 paddingzero">
        <div class="box">
            <h4><span class="boxtitle">FEATURED DEALS</span></h4>
            <div id="exclusive-deal-container"></div>
            <div id="exclusive-deal-container-loader" style="display: none;">
                <img src="~/Images/loading.gif" />
            </div>
        </div>
        <div class="box">
            <h4><span class="boxtitle">DAILY DEALS</span></h4>
            <div id="daily-deal-container">
                @*@Html.Action("_DailyDeals", "Deal")*@
            </div>
        </div>
        @*@Html.Action("_ExclusiveDeals", "Deal")*@
    </div>

    <div class="col-lg-3 col-md-3 col-sm-3 col-sx-3" style="padding-right:0px;">
        @*<iframe width='300' height='600' frameborder='0' scrolling='no' src='http://www.cuelinks.com/widgets/8097?pub_id=12521CL11357'></iframe>*@
        <div class="box">
            <div data-wrid="WRID-147512161567598547" data-widgettype="Push Content" data-class="affiliateAdsByFlipkart" height="250" width="300"></div>
            <script async src="//affiliate.flipkart.com/affiliate/widgets/FKAffiliateWidgets.js"></script>
            <br />
            <a href="http://tracking.vcommission.com/aff_c?offer_id=44&aff_id=46159&file_id=79711" target="_blank">
                <img src="http://media.vcommission.com/brand/files/vcm/44/Makemytrip_Flat50OFFonHotels_300x250.jpg" width="300" height="250" border="0" /></a><img src="http://tracking.vcommission.com/aff_i?offer_id=44&file_id=79711&aff_id=46159" width="1" height="1" />
            <div data-sdid="552704778" data-identifier="SnapdealAffiliateAds" data-height="300" data-width="250"></div>
            <script async id="snap_zxcvbnhg" src="https://affiliate-ads.snapdeal.com/affiliate/js/snapdealAffiliate.js"></script>
        </div>
    </div>
</div>

@*@Html.Action("_ShopByCategory", "Category")*@
<script>
    $(document).ready(function () {
        var settings = {
            EXCLUSIVE_DEAL: '@Url.Action("_ExclusiveDeals", "Deal", new {IsFeatured=true} )',
            DAILY_DEAL: '@Url.Action("_DailyDeals", "Deal")'
        };

        $("#exclusive-deal-container-loader").show();
        $.ajax({
            url: settings.EXCLUSIVE_DEAL,
            data: {}
        })
        .done(function (response) {
            $("#exclusive-deal-container-loader").hide();
            $("#exclusive-deal-container").html(response);
        })
        .fail(function (data, status, headers, config) {

        });

        $.ajax({
            url: settings.DAILY_DEAL,
            data: {}
        })
        .done(function (response) {
            $("#daily-deal-container").html(response);
        })
        .fail(function (data, status, headers, config) {

        });
    });
</script>
