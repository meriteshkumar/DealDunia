<script>
    $(document).ready(function () {
        var settings = {
            EXCLUSIVE_DEAL: '@Url.Action("_ExclusiveDeals", "Deal")',
            DAILY_DEAL: '@Url.Action("_DailyDeals", "Deal")'
        };

        $("#exclusive-deal-container-loader").show();
        $.ajax({
            url: settings.EXCLUSIVE_DEAL,
            data: {}
        })
        .done(function (response) {
            $("#exclusive-deal-container-loader").hide();
            $("#exclusive-deal-container").html(response);
        })
        .fail(function (data, status, headers, config) {

        });

        $.ajax({
            url: settings.DAILY_DEAL,
            data: {}
        })
