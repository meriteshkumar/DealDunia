@model IEnumerable<DealDunia.Domain.Entities.Category>

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <ul class="nav navbar-nav">
            @foreach (var category in Model)
            {
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><strong>@category.CategoryName</strong><b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        @{
                DealDunia.Domain.Abstract.IStoreRepository repository = new DealDunia.Domain.Concrete.SQLStoreRepository();
                            foreach (var subcategory in repository.SubCategories(category.CategoryId))
                            {
<li><a href="#">@subcategory.CategoryName</a></li>
                            }
                        }
                    </ul>
                </li>
            }
        </ul>
    </div>
</nav>
