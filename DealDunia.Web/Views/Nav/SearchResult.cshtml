@model IEnumerable<DealDunia.Infrastructure.Abstract.IItemResponse>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="well" style="width: 200px; text-align: center; float: left; height: 314px; margin-right: 5px;">
            @{
        if (item.Title.Length > 34)
        {
                <b>@item.Title.Substring(0, 34)..</b>
        }
        else
        {
                <b>@item.Title</b>
        }
            }

            <br />
            @item.Amount
            <br />
            <img src="@item.ImageUrl" width="77" height="160" />
            <br />
            <br />
            <a class="btn btn-primary" href="@item.DetailPageURL">Buy Now</a>
        </div>
    }
</div>
